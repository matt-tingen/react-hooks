{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2019", "DOM"],
    "target": "ESNext",
    "jsx": "react",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    // https://github.com/streamich/react-use/issues/892
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
